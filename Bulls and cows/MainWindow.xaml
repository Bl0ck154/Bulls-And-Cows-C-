<Window x:Class="Bulls_and_cows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bulls_and_cows"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="Быки и коровы" Height="450" Width="600" MinHeight="300" MinWidth="300">
    <DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="New game" Click="MenuItemNewGame_Click"></MenuItem>
				<MenuItem Header="Find online game" Click="MenuItemFind_Click"></MenuItem>
				<MenuItem Header="Connect by IP" Click="MenuItemConnectIP_Click"></MenuItem>
				<Separator/>
				<MenuItem Header="Exit" Click="MenuItemExit_Click"></MenuItem>
			</MenuItem>
		</Menu>
		<Grid Margin="10 0">
			<Grid.Resources>
				<Style TargetType="ListView">
					<Setter Property="View">
						<Setter.Value>
							<GridView>
								<GridViewColumn Header="Try" DisplayMemberBinding="{Binding Num}"/>
								<GridViewColumn Header="Number" DisplayMemberBinding="{Binding Number}"/>
								<GridViewColumn Header="Bulls" DisplayMemberBinding="{Binding Bulls}"/>
								<GridViewColumn Header="Cows" DisplayMemberBinding="{Binding Cows}"/>
								<!--<GridViewColumn Header="Button">
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<Button>Button Text</Button>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
								</GridViewColumn>-->
							</GridView>
						</Setter.Value>
					</Setter>
				</Style>
				<DataGrid x:Key="myDataGrid" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*">
					<DataGrid.Columns>
						<DataGridTextColumn Width="0.5*" Header="Try" Binding="{Binding Num}"/>
						<DataGridTextColumn Header="Number"  Binding="{Binding Number}"/>
						<DataGridTextColumn Header="Bulls"  Binding="{Binding Bulls}"/>
						<DataGridTextColumn Header="Cows"  Binding="{Binding Cows}"/>
					</DataGrid.Columns>
				</DataGrid>
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Margin="5">
				<StackPanel.Resources>
					<Style TargetType="TextBox">
						<Setter Property="Width" Value="50"></Setter>
						<Setter Property="Width" Value="50"></Setter>
						<Setter Property="FontSize" Value="20"></Setter>
						<Setter Property="MaxLength" Value="1"></Setter>
						<Setter Property="Margin" Value="2"></Setter>
						<Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
						<EventSetter Event="PreviewTextInput" Handler="textbox_OnlyNumeric"></EventSetter>
						<EventSetter Event="PreviewKeyDown" Handler="textbox_PreviewKeyDown"></EventSetter>
						<EventSetter Event="TextChanged" Handler="textbox_TextChanged"></EventSetter>
						<EventSetter Event="GotMouseCapture" Handler="textbox_GotMouseCapture"></EventSetter>
						<EventSetter Event="GotKeyboardFocus" Handler="textbox_GotKeyboardFocus"></EventSetter>
						<EventSetter Event="GotFocus" Handler="textbox_GotFocus"></EventSetter>
					</Style>
				</StackPanel.Resources>
				<TextBox Name="textboxNum1"></TextBox>
				<TextBox Name="textboxNum2"></TextBox>
				<TextBox Name="textboxNum3"></TextBox>
				<TextBox Name="textboxNum4"></TextBox>
			</StackPanel>
			<!--<TextBox Grid.ColumnSpan="2" Margin="5" FontSize="20" PreviewTextInput="textbox_OnlyNumeric"
					 PreviewKeyDown="textbox_restrictSpace" MaxLength="4" Name="textboxNumber"></TextBox>-->
			<Button Grid.Column="1" Click="Button_Click" Name="btnStart">Start</Button>

			<DataGrid FontSize="17" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*"
					  Name="playerDataGrid" Grid.Row="1" Grid.Column="0" Margin="10">
				<DataGrid.Columns>
					<DataGridTextColumn Width="0.5*" Header="Try" Binding="{Binding Num}"/>
					<DataGridTextColumn Header="Number"  Binding="{Binding Number}"/>
					<DataGridTextColumn Header="Bulls"  Binding="{Binding Bulls}"/>
					<DataGridTextColumn Header="Cows"  Binding="{Binding Cows}"/>
				</DataGrid.Columns>
			</DataGrid>
			<DataGrid FontSize="17" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*"
					  Name="opponentDataGrid" Grid.Row="1" Grid.Column="1" Margin="10" IsEnabled="False">
				<DataGrid.Columns>
					<DataGridTextColumn Width="0.5*" Header="Try" Binding="{Binding Num}"/>
					<DataGridTextColumn Header="Number"  Binding="{Binding Number}"/>
					<DataGridTextColumn Header="Bulls"  Binding="{Binding Bulls}"/>
					<DataGridTextColumn Header="Cows"  Binding="{Binding Cows}"/>
				</DataGrid.Columns>
			</DataGrid>

			<StatusBar Grid.Row="2" Grid.ColumnSpan="2">
				Timer: <TextBlock Name="textTimer">0</TextBlock>
			</StatusBar>
		</Grid>
    </DockPanel>
</Window>
