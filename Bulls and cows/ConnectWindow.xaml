<Window x:Class="Bulls_and_cows.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bulls_and_cows"
        mc:Ignorable="d" FontSize="18"
		WindowStartupLocation="CenterScreen"
        Title="ConnectWindow" Height="150" Width="200">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Enter IP:Port</Label>
		<TextBox Name="textboxIp" Grid.Row="1" Margin="2"></TextBox>
		<Button Grid.Row="2" Margin="2" Click="Button_Click">Connect</Button>
    </Grid>
</Window>
